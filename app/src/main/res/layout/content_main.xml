<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="br.com.brunoedalcilene.horadoremdio.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <android.support.design.widget.TextInputLayout
                android:layout_width="286dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.60">

                <EditText
                    android:id="@+id/txtAgendaBusca"
                    android:layout_width="310dp"
                    android:layout_height="wrap_content"
                    android:hint="Paciente ou RemÃ©dio" />

            </android.support.design.widget.TextInputLayout>

            <ImageButton
                android:id="@+id/btnAgendaPesquisar"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                app:srcCompat="@drawable/pesquisa" />

        </LinearLayout>

        <ListView
            android:id="@+id/lstAgenda"
            android:layout_width="357dp"
            android:layout_height="match_parent" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
