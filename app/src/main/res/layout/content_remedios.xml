<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="br.com.brunoedalcilene.horadoremdio.RemediosActivity"
    tools:showIn="@layout/activity_remedios">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">

            <android.support.design.widget.TextInputLayout
                android:layout_width="186dp"
                android:layout_height="wrap_content"
                android:layout_weight="5.63">

                <EditText
                    android:id="@+id/txtRemedioBusca"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nome ou Descrição" />

            </android.support.design.widget.TextInputLayout>

            <ImageButton
                android:id="@+id/btnRemedioPesquisar"
                android:layout_width="wrap_content"
                android:layout_height="54dp"
                app:srcCompat="@drawable/pesquisa" />

        </LinearLayout>

        <ListView
            android:id="@+id/lstRemedios"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
